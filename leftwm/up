#!/usr/bin/env bash

export SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"

# pacman -S --needed leftwm leftwm-theme-git polybar pavucontrol xss-lock physlock picom feh network-manager-applet blueman

